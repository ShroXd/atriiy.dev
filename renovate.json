{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "dependencyDashboard": true,
  "schedule": ["every weekend"],
  "prHourlyLimit": 5,
  "rangeStrategy": "auto",
  "semanticCommits": "enabled",
  "timezone": "Asia/Shanghai"
}
